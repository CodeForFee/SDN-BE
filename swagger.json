{
  "openapi": "3.0.0",
  "info": {
    "title": "Electric Vehicle Dealer Management System API",
    "description": "API for managing electric vehicle sales through dealer channels",
    "version": "1.0.0",
    "contact": {
      "name": "EVM Team",
      "email": "support@evms.com"
    }
  },
  "servers": [
    {
      "url": "https://sdn-be-1htr.onrender.com/api",
      "description": "Production server (Render)"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "role": { 
            "type": "string", 
            "enum": ["Dealer Staff", "Dealer Manager", "EVM Staff", "Admin"] 
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Vehicle": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "model": { "type": "string" },
          "version": { "type": "string" },
          "color": { "type": "string" },
          "price": { "type": "number" },
          "features": { "type": "array", "items": { "type": "string" } },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Dealer": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "location": { "type": "string" },
          "contactInfo": { "type": "string" },
          "salesTarget": { "type": "number" },
          "debt": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "address": { "type": "string" },
          "feedback": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "customer": { 
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            }
          },
          "dealer": { 
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "name": { "type": "string" },
              "location": { "type": "string" }
            }
          },
          "vehicle": { 
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "model": { "type": "string" },
              "version": { "type": "string" },
              "price": { "type": "number" }
            }
          },
          "status": { 
            "type": "string", 
            "enum": ["Pending", "Confirmed", "Delivered"] 
          },
          "paymentType": { 
            "type": "string", 
            "enum": ["Cash", "Installment"] 
          },
          "amount": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Inventory": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "vehicle": { 
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "name": { "type": "string" },
              "model": { "type": "string" }
            }
          },
          "dealer": { 
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "name": { "type": "string" },
              "address": { "type": "string" }
